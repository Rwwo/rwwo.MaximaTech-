@using MaximaTech.api.Models
@model Produtos

@{
    ViewData["Title"] = "Editar Produto";
}

<h2>Editar Produto</h2>

<form asp-action="Editar" method="post">
    <div class="form-group">
        <label>Código:</label>
        <input asp-for="Codigo" class="form-control" value="@Model.Codigo" />
    </div>
    <div class="form-group">
        <label>Descrição:</label>
        <input asp-for="Descricao" class="form-control" value="@Model.Descricao" />
    </div>
    <div class="form-group">
        <label>Preço:</label>
        <input asp-for="Preco" class="form-control" value="@Model.Preco" />
    </div>

    <div class="form-group">
        <label>Departamento:</label>
        <select asp-for="DepartamentoId" class="form-control">
            <option value="">Selecione um departamento</option>
            @foreach (var departamento in ViewBag.Departamentos)
            {
                <option value="@departamento.Id">@departamento.Descricao</option>
            }
        </select>
    </div>

    <form asp-action="EditarConfirmed" asp-route-id="produto" method="post">
        <button type="submit" class="btn btn-primary btn-lg mt-3">Salvar</button>
    </form>

    <a asp-action="Index" class="btn btn-secondary mt-3">Voltar para Lista</a>

</form>
