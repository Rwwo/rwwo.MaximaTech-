@using MaximaTech.api.Models
@model Produtos

@{
    ViewData["Title"] = "Deletar Produto";
}

<h2>Deletar Produto</h2>

<div class="alert alert-danger" role="alert">
    Tem certeza de que deseja excluir este produto?
</div>

<form asp-action="Delete" method="post">
    <div class="form-group">
        <label>Código:</label>
        <input asp-for="Codigo" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label>Descrição:</label>
        <input asp-for="Descricao" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label>Preço:</label>
        <input asp-for="Preco" class="form-control" disabled />
    </div>
   
    <input type="hidden" asp-for="Id" />
    <form asp-action="DeleteConfirmed" asp-route-id="produto.Id" method="post">
        <button type="submit"  class="btn btn-danger btn-lg mt-3">Confirmar Exclusão</button>
    </form>
    
    <a asp-action="Index" class="btn btn-secondary btn-lg mt-3">Cancelar e retornar</a>
</form>
