@model ErroGenericoViewModel

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Erro</title>
</head>
<body>
    <h1>Erro</h1>
    <p>Ocorreu um erro ao processar sua solicitação.</p>

    @if (Model != null)
    {
        <h3>Detalhes do Erro</h3>
        <p>@Model.Mensagem</p>
    }

    <p><a href="@Url.Action("Index", "Home")">Voltar para a Página Inicial</a></p>
</body>
</html>
