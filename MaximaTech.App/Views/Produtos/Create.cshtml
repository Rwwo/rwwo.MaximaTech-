@using MaximaTech.api.Models
@model ProdutoViewModel

@{
    ViewData["Title"] = "Novo Produto";
}

<h2>Novo Produto</h2>

<form asp-action="Create">
    <div class="form-group">
        <label>Código:</label>
        <input asp-for="Codigo" class="form-control" />
    </div>
    <div class="form-group">
        <label>Descrição:</label>
        <input asp-for="Descricao" class="form-control" />
    </div>
    <div class="form-group">
        <label>Preço:</label>
        <input asp-for="Preco" class="form-control" />
    </div>
    <div class="form-group">
        <label>Status:</label>
        <input asp-for="Status" class="form-check" />
    </div>
    <div class="form-group">
        <label>Departamento:</label>
        <select asp-for="DepartamentoId" class="form-control">
            <option value="">Selecione um departamento</option>
            @foreach (var departamento in ViewBag.Departamentos)
            {
                <option value="@departamento.Id">@departamento.Descricao</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary btn-lg mt-3">Salvar</button>
</form>
